pipeline {
    agent any
    tools{
        maven 'maven 3.6.3'
        }
    stages {
        stage("git"){
            steps{
                git 'https://github.com/srikanthdata/maven-web-application.git'                
            }
        }
        stage("Build") {
            steps {
                sh "mvn clean package"
            }
        }
        stage("build and push docker image"){
                steps{
                        sh "docker build –t srikanth411/tomcattest:latest ./"
                        withCredentials([string(credentialsId: 'docker-pwd', variable: 'dockerHubPwd')]) {
                                sh "docker login -u srikanth411 –password ${dockerHubPwd}"
                            }
                        sh "docker push srikanth411/tomcattest:latest"
                        sh "docker logout"
                    }
        }
    }    
}
