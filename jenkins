pipeline {
    agent any
    tools{
        maven 'maven 3.6.3'
        }
    stages {
        stage("git"){
            steps{
                git 'https://github.com/srikanthdata/maven-web-application.git'                
            }
        }
        stage("Build") {
            steps {
                sh "mvn clean package"
            }
        }
        stage("build and push docker image"){
                environment{
                    DOCKER_CREDENTIALS = credentials('srikanth411-dockerhub')
                  }
                steps{
                        sh "docker build –t srikanth411/tomcattest:latest ."
                        sh "docker login -u ${srikanth411} –password ${e9df4d01-5156-4fd7-a266-c8892d8d1aee}"
                        sh "docker push srikanth411/tomcattest:latest"
                        sh "docker logout"
                    }
        }
    }    
}
