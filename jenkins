pipeline {
    agent any
    tools{
        maven 'maven 3.6.3'
        }
    stages {
        stage("git"){
            steps{
                git 'https://github.com/srikanthdata/maven-web-application.git'                
            }
        }
        stage("Build") {
            steps {
                sh "mvn clean package"
            }
        }
        stage("build and push docker image"){
                environment{
                    DOCKER_CREDENTIALS = credentials('srikanth411-dockerhub')
                  }
                steps{
                        sh 'docker build –t srikanth411-dockerhub:latest'
                        sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login  -u $DOCKERHUB_CREDENTIALS_USR –password-stdin'
                        sh 'docker push srikanth411-dockerhub:latest'
                        sh 'docker logout'
                    }
        }
}
